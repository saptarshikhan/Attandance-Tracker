<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .card-img-top{
            height: 200px;
            width: 300px;

        }
        
    </style>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Attandance Tracker</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function(){
        var myModal = document.getElementById("myModal");
    
        myModal.addEventListener("show.bs.modal", function(event){        
            // Get the button that triggered the modal
            var button = event.relatedTarget;
            
            // Extract value from the custom data-* attribute
            var titleData = button.getAttribute("data-title");
    
            // Change modal title
            myModal.querySelector(".modal-title").innerText = titleData;
        });
    });
    </script>
</head>
<body>
    <nav class="navbar  navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid mx-2">
            <a href="#" class="navbar-brand">Attandance Tracker</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav">
                    
                <div class="navbar-nav ms-auto">
                    <a href="#" class="nav-item nav-link mx-3"><button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#myModal" data-title="Add Subject">Add Subject
                    
                    </button></a>
                </div>
                
            </div>
        </div>
        


    </nav>
    <div class="container my-4">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>SL No.</th>
                <th>Cource</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% sl=1; 
            data.forEach((e)=>{
                %>
                <tr>
                    <td><%=sl%></td>
                    <td><b><%=e.name%></b></td>
                    <td><a href="mark?id=<%=e._id%>&name=<%=e.name%>" class="btn-success">Mark</a></td>
                    <td><a href="details?id=<%=e._id%>&name=<%=e.name%>" class="btn-secondary">Details</a></td>
                </tr>
                <%
                sl++;
            })
            %>
            
            
        </tbody>
    </table>
    </div>

  
    <!--Model-->
    <div class="m-4">
        <!-- Button HTML (to Trigger Modal) -->
    
        <div id="myModal" class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="add" method="post">
                        <div class="modal-header">  
                            <h5 class="modal-title">Add Subject</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">                        
                            <div class="mb-3">
                                <label class="form-label">Name:</label>
                                <input type="text" name="name" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <input type="text" name="description" class="form-control">
                            </div>
                             
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>